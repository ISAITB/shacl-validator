<div id="reportOverviewButtons" class="btn-toolbar">
    <div class="btn-group{{#if config.isMinimalUI}} dropup{{/if}}">
        <button type="button" id="downloadReportButton" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span id="downloadReportButtonSpinner" class="hidden"> <i class="fa fa-spinner fa-spin fa-fw"></i></span>
            <span>{{data.translations.downloadReportButton}}</span> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{#if (or (not report.reports) (not report.reports.infoOrWarningOrError) (lte report.reports.infoOrWarningOrError.length data.maximumReportsForDetailedOutput))}}
                <li><a href="#" class="downloadReport" data-report-type="pdfTypeDetailed"><span>{{data.translations.reportDetailedPDF}}</span></a></li>
                {{#if data.showAggregateReport}}
                    <li><a href="#" class="downloadReport" data-report-type="pdfTypeAggregated"><span>{{data.translations.reportAggregatedPDF}}</span></a></li>
                {{/if}}
            {{/if}}
            <li><a href="#" class="downloadReport" data-report-type="csvTypeDetailed"><span>{{data.translations.reportDetailedCSV}}</span></a></li>
            {{#if data.showAggregateReport}}
                <li><a href="#" class="downloadReport" data-report-type="csvTypeAggregated"><span>{{data.translations.reportAggregatedCSV}}</span></a></li>
            {{/if}}
            <li role="separator" class="divider"></li>
            {{#each data.contentSyntax}}
                <li><a href="#" class="downloadReport" data-report-type="{{label}}"><span>{{key}}</span></a></li>
            {{/each}}
        </ul>
    </div>
    <div class="btn-group{{#if config.isMinimalUI}} dropup{{/if}}">
        <button type="button" id="downloadShapesButton" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span id="downloadShapesButtonSpinner" class="hidden"> <i class="fa fa-spinner fa-spin fa-fw"></i></span>
            <span>{{data.translations.downloadShapesButton}}</span> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{#each data.contentSyntax}}
                <li><a href="#" class="downloadShapes" data-content-type="{{label}}"><span>{{key}}</span></a></li>
            {{/each}}
        </ul>
    </div>
    <div class="btn-group{{#if config.isMinimalUI}} dropup{{/if}}">
        <button type="button" id="downloadInputButton" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span id="downloadInputButtonSpinner" class="hidden"> <i class="fa fa-spinner fa-spin fa-fw"></i></span>
            <span>{{data.translations.downloadInputButton}}</span> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {{#each data.contentSyntax}}
                <li><a href="#" class="downloadContent" data-content-type="{{label}}"><span>{{key}}</span></a></li>
            {{/each}}
        </ul>
    </div>
</div>